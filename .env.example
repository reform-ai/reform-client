# Reform - AI Personal Trainer Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# LLM Configuration (Optional - defaults will be used if not set)
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7

# Audio Configuration (Optional)
AUDIO_VOLUME=0.8
AUDIO_RATE=1.0
AUDIO_PITCH=1.0

# Camera Configuration (Optional)
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# Pose Detection Configuration (Optional)
POSE_MIN_CONFIDENCE=0.3

# Feedback Intervals (Optional - in milliseconds)
IMMEDIATE_FEEDBACK_MS=1000
AI_FEEDBACK_MS=5000
AGGREGATED_ANALYSIS_MS=30000

# Development Configuration (Optional)
NODE_ENV=development
ENABLE_LOGGING=true
LOG_LEVEL=info
ENABLE_DEBUG_OVERLAY=true
DEBUG=false

# TensorFlow Configuration (Optional)
TF_INIT_TIMEOUT=10000
